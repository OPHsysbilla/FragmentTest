<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    >

    <ListView
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFF"
        android:layout_weight="1"
        android:scrollbarStyle="outsideOverlay"
        android:id="@+id/tab_sort_filter_grid_list"
        android:listSelector="#FFF"
        android:footerDividersEnabled="false"
        android:divider="#FFF">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:background="#FFF"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/tab_sort_filter_reset"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="清空"
                android:textColor="@drawable/tab_shape_filter_white_button_text_color"
                android:background="@drawable/tab_filter_white_button_touch"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_height="40dp">
            <Button
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/tab_sort_filter_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@drawable/tab_shape_filter_white_button_text_color"
                android:background="@drawable/tab_filter_white_button_touch"
                android:text="确定"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
